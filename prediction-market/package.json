{
  "name": "prediction-market",
  "version": "1.0.0",
  "description": "Decentralized prediction market with Stacks SDK integration",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:sdk": "vitest run tests/stacks-sdk.test.ts",
    "deploy:testnet": "clarinet deployments apply --devnet",
    "deploy:mainnet": "clarinet deployments apply --mainnet"
  },
  "author": "Marcus David",
  "license": "MIT",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.0",
    "@types/node": "^24.4.0",
    "@stacks/transactions": "^7.2.0",
    "@stacks/stacks-blockchain-api-types": "^7.14.1",
    "@stacks/network": "^7.2.0",
    "@stacks/auth": "^7.2.0",
    "@stacks/connect": "^7.8.3",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  }
}
